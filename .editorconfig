# editorconfig.org
root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**/*.{config,csproj,dotsettings,feature,fxcop,markdown,md,ncrunch*,ndepend,rb,targets,xml,xsd}]
indent_size = 2

[**/*.{cs,cshtml,css,html,js,json,less}]
indent_size = 4
