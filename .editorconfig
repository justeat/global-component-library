# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[**/*.{config,csproj,dotsettings,feature,fxcop,markdown,md,ncrunch*,ndepend,rb,targets,xml,xsd,json}]
indent_size = 2

[**/*.{cs,cshtml,scss,css,html,js,json,less}]
indent_size = 4
